#include <stdio.h>

int main() {
    // Read input value
    int seconds;

    scanf("%d", &seconds);

    // Calculate hours, minutes, and remaining seconds
    int hours = seconds / 3600;
    int minutes = (seconds % 3600) / 60;
    int remainingSeconds = seconds % 60;

    // Print the result
    printf("%d:%d:%d\n", hours, minutes, remainingSeconds);

    return 0;
}

